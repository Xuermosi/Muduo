{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/opt/rh/devtoolset-11/root/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cmake",
            "label": "CMake: 配置",
            "command": "configure",
            "problemMatcher": [],
            "detail": "CMake 模板 配置 任务"
        },
        {
            "type": "cmake",
            "label": "CMake: 安装",
            "command": "install",
            "problemMatcher": [],
            "detail": "CMake 模板 安装 任务"
        }
    ],
    "version": "2.0.0"
}